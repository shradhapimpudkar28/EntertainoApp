<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoginTheme">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/lobster_two</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="UsernameTheme">
        <item name="android:padding">@dimen/dimen15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="FoodiesTextTheme">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:paddingRight">@dimen/dimen30sp</item>
        <item name="android:paddingTop">@dimen/dimen10sp</item>
        <item name="android:paddingBottom">@dimen/dimen10sp</item>
        <item name="android:layout_marginBottom">@dimen/dimen20sp</item>
        <item name="android:paddingLeft">@dimen/dimen10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/dimen18sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>
    <style name="RegisterTextTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:paddingRight">@dimen/dimen30sp</item>
        <item name="android:paddingTop">@dimen/dimen10sp</item>
        <item name="android:paddingBottom">@dimen/dimen10sp</item>
        <item name="android:layout_marginBottom">@dimen/dimen20sp</item>
        <item name="android:paddingLeft">@dimen/dimen10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/dimen18sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
    <style name="LoginTextTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="android:paddingRight">@dimen/dimen10sp</item>
        <item name="android:paddingTop">@dimen/dimen10sp</item>
        <item name="android:paddingBottom">@dimen/dimen10sp</item>
        <item name="android:layout_marginBottom">@dimen/dimen10sp</item>
        <item name="android:paddingLeft">@dimen/dimen30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/dimen20sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
</resources>
